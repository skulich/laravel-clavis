{
  "name": "skulich/laravel-clavis",
  "description": "Laravel Clavis is a simple token-based authentication middleware for Laravel APIs.",
  "keywords": [
    "laravel",
    "api",
    "auth",
    "token"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Siarhei Kulich",
      "email": "siarhei.kulich@gmail.com"
    }
  ],
  "require": {
    "php": "^8.3",
    "laravel/framework": "^12.42.0"
  },
  "require-dev": {
    "larastan/larastan": "^3.8",
    "laravel/pint": "^1.26",
    "orchestra/testbench": "^10.8",
    "pestphp/pest": "^4.1",
    "pestphp/pest-plugin-laravel": "^4.0",
    "pestphp/pest-plugin-type-coverage": "^4.0",
    "phpstan/extension-installer": "^1.4",
    "rector/rector": "^2.2",
    "symfony/var-dumper": "^7.4"
  },
  "autoload": {
    "psr-4": {
      "SKulich\\LaravelClavis\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SKulich\\LaravelClavis\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "lint": "@php vendor/bin/pint",
    "refactor": "@php vendor/bin/rector process",
    "test:refactor": "@php vendor/bin/rector process --dry-run",
    "test:lint": "@php vendor/bin/pint --test",
    "test:types": "@php vendor/bin/phpstan analyse",
    "test:typec": "@php vendor/bin/pest --type-coverage --min=100",
    "test:unit": "@php vendor/bin/pest --coverage --parallel --min=100",
    "test": [
      "@test:refactor",
      "@test:lint",
      "@test:types",
      "@test:typec",
      "@test:unit"
    ]
  },
  "extra": {
    "laravel": {
      "providers": [
        "SKulich\\LaravelClavis\\ServiceProvider"
      ]
    }
  },
  "config": {
    "sort-packages": true,
    "preferred-install": "dist",
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "phpstan/extension-installer": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}